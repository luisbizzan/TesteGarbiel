@model FWLog.Web.Backoffice.Models.GarantiaCtx.GarantiaSolicitacaoItemVM
@{
    Layout = null;
    @BundleHelper.RenderViewScriptModal(new
{
    id = Model.Solicitacao.Id
})
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title">Detalhes da Solicitação</h4>
        </div>
        <div class="modal-body" style="overflow: auto; max-height: calc(100vh - 150px);">

            <div class="x_panel">

                <div class="x_content">
                    <div class="row" style="margin-bottom:10px;">
                        <div class="col-xs-12 col-sm-3 col-lg-3 col-md-3">
                            @Html.LabelFor(m => m.Solicitacao.Id): @Model.Solicitacao.Id
                        </div>
                        <div class="col-xs-12 col-sm-3 col-lg-3 col-md-3">
                            @Html.LabelFor(m => m.Solicitacao.Nota_Fiscal): @Model.Solicitacao.Nota_Fiscal
                        </div>
                        <div class="col-xs-12 col-sm-3 col-lg-3 col-md-3">
                            @Html.LabelFor(m => m.Solicitacao.Dt_Criacao): @Model.Solicitacao.Dt_Criacao
                        </div>
                        <div class="col-xs-12 col-sm-3 col-lg-3 col-md-3">
                            @Html.LabelFor(m => m.Solicitacao.Tipo): @Model.Solicitacao.Tipo
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-3 col-lg-3 col-md-3">
                            @Html.LabelFor(m => m.Solicitacao.Cli_Cnpj): @Model.Solicitacao.Cli_Cnpj
                        </div>
                        <div class="col-xs-12 col-sm-3 col-lg-3 col-md-3">
                            @Html.LabelFor(m => m.Solicitacao.Razao_Social): @Model.Solicitacao.Razao_Social
                        </div>
                        <div class="col-xs-12 col-sm-3 col-lg-3 col-md-3">
                            @Html.LabelFor(m => m.Solicitacao.Rep): @Model.Solicitacao.Rep
                        </div>
                    </div>
                </div>
            </div>

            <div class="x_panel">
                <div class="x_title">
                    <h2>Itens da Solicitação</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="tbSolicitacaoItens" class="table table-striped table-bordered dt-responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>@Html.DisplayNameFor(m => m.ItensCabecalho.Id)</th>
                                <th>@Html.DisplayNameFor(m => m.ItensCabecalho.Refx)</th>
                                <th>@Html.DisplayNameFor(m => m.ItensCabecalho.Descricao)</th>
                                <th>@Html.DisplayNameFor(m => m.ItensCabecalho.Quant)</th>
                                <th>@Html.DisplayNameFor(m => m.ItensCabecalho.Valor)</th>
                                <th>@Html.DisplayNameFor(m => m.ItensCabecalho.Valor_Total)</th>
                                <th>@Html.DisplayNameFor(m => m.ItensCabecalho.Cod_Fornecedor)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Itens)
                            {
                            <tr>
                                <td></td>
                                <td>@item.Id</td>
                                <td>@item.Refx</td>
                                <td>@item.Descricao</td>
                                <td>@item.Quant</td>
                                <td>@item.Valor</td>
                                <td>@item.Valor_Total</td>
                                <td>@item.Cod_Fornecedor</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>