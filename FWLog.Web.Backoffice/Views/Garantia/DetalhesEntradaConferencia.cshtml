                            <div class="col-sm-4 col-lg-4">
                                @Html.LabelFor(m => m.DataFimConferencia): @Model.DataFimConferencia
                            </div>
                            <div class="col-sm-4 col-lg-4">
                                @Html.LabelFor(m => m.TempoTotalConferencia): @Model.TempoTotalConferencia
                            </div>
                        </div>
                    </div>*@
                    <div class="row" style="margin-top: 15px; overflow-y: auto; height: 300px">
                        <div class="col-sm-12 col-lg-12">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Referência</th>
                                        <th>Descrição</th>
                                        <th>Un</th>
                                        <th>CFOP</th>
                                        <th>Quant</th>
                                        <th>Cod.Integração NF Origem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ItensDaNota.Count > 0)
                                    {
                                        foreach (var item in Model.ItensDaNota)
                                        {
                                            <tr>
                                                <td>@item.Referencia</td>
                                                <td>@item.DescricaoProduto</td>
                                                <td>@item.Unidade</td>
                                                <td>@item.CFOP</td>
                                                <td>@item.QuantidadeProduto</td>
                                                <td>@item.NumeroNotaFiscalOrigem</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr class="even">
                                            <td colspan="6" class="text-center">Nenhum registro.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    @*<div class="tab-pane fade" id="divergencias" role="tabpanel" aria-labelledby="divergenciasTab">
                                @if (Model.Divergencias.Divergencias.Any())
                                {
                                    <div class="informacoes">
                                        <div class="row">
                                            <div class="col-sm-4 col-md-4">
                                                @Html.LabelFor(m => m.Divergencias.NotaFiscal): @Html.DisplayTextFor(m => m.Divergencias.NotaFiscal)
                                            </div>
                                            <div class="col-sm-4 col-md-4">
                                                @Html.LabelFor(m => m.Divergencias.StatusNotasFiscal): @Html.DisplayTextFor(m => m.Divergencias.StatusNotasFiscal)
                                            </div>
                                            <div class="col-sm-4 col-md-4">
                                                @Html.LabelFor(m => m.Divergencias.DataTratamento): @Html.DisplayTextFor(m => m.Divergencias.DataTratamento)
                                            </div>
                                            <div class="col-sm-12 col-md-12">
                                                @Html.LabelFor(m => m.Divergencias.UsuarioTratamento): @Html.DisplayTextFor(m => m.Divergencias.UsuarioTratamento)
                                            </div>
                                            <div class="col-xs-12" style="margin-top: 5px">
                                                @Html.LabelFor(f => f.Observacao):
                                                @Html.TextAreaFor(m => m.Observacao, new { @class = "form-control", @rows = 10, @style = "font:12px; height:100px !important;", @readonly = "readonly" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row" style="margin-top: 15px; overflow-y: auto;">
                                        <div class="col-sm-12 col-lg-12">
                                            <table class="table table-bordered">
                                                <thead>
