@model FWLog.Web.Backoffice.Models.GarantiaCtx.GarantiaDetalhesEntradaConferencia
@{
    Layout = null;
    @BundleHelper.RenderViewScriptModal(new
    {
        idNotaFiscal = Model.IdNotaFiscal
    })
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title">Detalhes da Nota Fiscal</h4>
        </div>
        <div class="modal-body" style="overflow: auto; max-height: calc(100vh - 150px);">
            <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                <li class="nav-item active">
                    <a class="nav-link" id="notaFiscalTab" data-toggle="tab" href="#entradaConferencia" role="tab" aria-controls="entradaConferencia" aria-selected="true">Nota Fiscal</a>
                </li>
                @*<li class="nav-item">
                        <a class="nav-link" id="divergenciasTab" data-toggle="tab" href="#divergencias" role="tab" aria-controls="divergencias" aria-selected="false">Divergências</a>
                    </li>*@
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade active in" id="notaFiscalTab" role="tabpanel" aria-labelledby="notaFiscalTab">
                    <div class="informacoes">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                @Html.LabelFor(m => m.ChaveAcesso): @Model.ChaveAcesso
                            </div>
                            <div class="col-xs-12 col-sm-3 col-lg-3">
                                @Html.LabelFor(m => m.NumeroNotaFiscal): @Model.NumeroNotaFiscal
                            </div>
                            <div class="col-xs-12 col-sm-3 col-lg-3">
                                @Html.LabelFor(m => m.DataEmissaoNF): @Model.DataEmissaoNF
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                @Html.LabelFor(m => m.RazaoSocialCliente): @Model.RazaoSocialCliente
                            </div>
                            <div class="col-xs-12 col-sm-3 col-lg-3">
                                @Html.LabelFor(m => m.CienteCNPJ): @Model.CienteCNPJ
                            </div>
                            <div class="col-xs-12 col-sm-3 col-lg-3">
                                @Html.LabelFor(m => m.NroFicticio): @Model.NroFicticio
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                @Html.LabelFor(m => m.BaseICMS): @Model.BaseICMS
                            </div>
                            <div class="col-xs-12 col-sm-3 col-lg-3">
                                @Html.LabelFor(m => m.ValorICMS): @Model.ValorICMS
                            </div>
                            <div class="col-xs-12 col-sm-3 col-lg-3">
                                @Html.LabelFor(m => m.BaseST): @Model.BaseST
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                @Html.LabelFor(m => m.ValorST): @Model.ValorST
                            </div>
                            <div class="col-xs-12 col-sm-3 col-lg-3">
                                @Html.LabelFor(m => m.ValorIPI): @Model.ValorIPI
                            </div>
                            <div class="col-xs-12 col-sm-3 col-lg-3">
                                @Html.LabelFor(m => m.ValorProduto): @Model.ValorProduto
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                @Html.LabelFor(m => m.ValorSeguro): @Model.ValorSeguro
                            </div>
                            <div class="col-xs-12 col-sm-3 col-lg-3">
                                @Html.LabelFor(m => m.ValorFrete): @Model.ValorFrete
                            </div>
                            <div class="col-xs-12 col-sm-3 col-lg-3">
                                @Html.LabelFor(m => m.ValorTotal): @Model.ValorTotal
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-lg-12">
                            <h4 style="margin-top: 15px; margin-bottom: 0px;">Itens da Nota</h4>
                            <div class="ln_solid" style="margin-bottom: 15px; margin-top: 0px;"></div>
                        </div>
                    </div>
                    @*<div class="informacoes">
                        <div class="row">
                            <div class="col-sm-4 col-lg-4">
                                @Html.LabelFor(m => m.ConferenciaTipo): @Model.ConferenciaTipo
                            </div>
                            <div class="col-sm-8 col-lg-8">
                                @Html.LabelFor(m => m.UsuarioConferencia): @Model.UsuarioConferencia
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-lg-4">
