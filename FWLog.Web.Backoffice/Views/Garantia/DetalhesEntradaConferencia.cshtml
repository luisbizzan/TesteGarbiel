                                                        <th>@Html.LabelFor(m => m.Divergencias.Divergencias[0].Referencia)</th>
                                                        <th>@Html.LabelFor(m => m.Divergencias.Divergencias[0].DescricaoProduto)</th>
                                                        <th style="text-align:center">@Html.LabelFor(m => m.Divergencias.Divergencias[0].QuantidadeNotaFiscal)</th>
                                                        <th style="text-align:center">@Html.LabelFor(m => m.Divergencias.Divergencias[0].QuantidadeConferencia)</th>
                                                        <th style="text-align:center">@Html.LabelFor(m => m.Divergencias.Divergencias[0].QuantidadeMaisTratado)</th>
                                                        <th style="text-align:center">@Html.LabelFor(m => m.Divergencias.Divergencias[0].QuantidadeMenosTratado)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @for (int i = 0; i < Model.Divergencias.Divergencias.Count(); i++)
                                                    {
                                                        <tr class="linha-divergencia">
                                                            <td>@Model.Divergencias.Divergencias[i].Referencia</td>
                                                            <td>@Model.Divergencias.Divergencias[i].DescricaoProduto</td>
                                                            <td style="text-align:center">@Model.Divergencias.Divergencias[i].QuantidadeNotaFiscal</td>
                                                            <td style="text-align:center">@Model.Divergencias.Divergencias[i].QuantidadeConferencia</td>
                                                            <td style="text-align:center">@Model.Divergencias.Divergencias[i].QuantidadeMaisTratado</td>
                                                            <td style="text-align:center">@Model.Divergencias.Divergencias[i].QuantidadeMenosTratado</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                }
                                else if (Model.Finalizado)
                                {
                                    <p>
                                        Nenhuma divergência encontrada.
                                    </p>
                                }
                                else if (Model.ConferidoDivergencia)
                                {
                                    <p>
                                        Aguardando a finalização da tratativa de divergência.
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        A conferência do Lote não foi finalizada.
                                    </p>
                                }
                            </div>
                        </div>*@
                </div>
                @*<div class="modal-footer">
                        <div class="col-sm-6 col-lg-6">
                            <div class="nav navbar-left impressao">
