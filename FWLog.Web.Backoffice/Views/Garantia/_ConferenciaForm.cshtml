@model FWLog.Web.Backoffice.Models.GarantiaCtx.GarantiaConferenciaFormVM

<div class="row">
    <div class="col-md-8">
        <div class="x_panel">
            <div class="x_content">
                <form id="formConferir">

                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Form.Refx, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Form.Refx, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Form.Refx)
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Form.Quantidade, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Form.Quantidade, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.Form.Quantidade)
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Form.Descricao, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Form.Descricao, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.Form.Descricao)
                            </div>
                        </div>
                    </div>

                    <button type="button"  id="btAlterarQuantidade" class="btn btn-success right"><i class="fa fa-exchange"></i> <strong style="color:yellow">(F4)</strong> Alterar Quantidade</button>
                    <button type="button" id="btItensPendentes" class="btn btn-primary right"><i class="fa fa-gears"></i> <strong style="color:yellow">(F3)</strong> Ver Peças Pendentes</button>
                    <button type="button" id="btFinalizarConferencia" class="btn btn-success right"><i class="fa fa-save"></i> Finalizar Conferência</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="x_panel">
            <div class="x_title">
                <h2>Últimos Conferidos</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="tbDivergenciaItens" class="table table-striped table-bordered dt-responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th>Refx</th>
                            <th>Descrição</th>
                            <th>Quant</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>xxx</td>
                            <td>teste</td>
                            <td> <span class="label label-success"> 5</span></td>
                        </tr>
                        <tr>
                            <td>zzz</td>
                            <td>teste</td>
                            <td> <span class="label label-danger"> -5</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>