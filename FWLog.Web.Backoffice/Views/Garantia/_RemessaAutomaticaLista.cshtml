@model List<FWLog.Web.Backoffice.Models.GarantiaCtx.GarRemessaListaVM>

<table id="tbRemessaLista" class="table table-striped table-bordered dt-responsive" style="width:100%">
    <thead>
        <tr>
            <th>Forn</th>
            <th>Forn Nome</th>
            <th>Vlr Atingido</th>
            <th>Vlr Minimo</th>
            <th>Usuário</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cod_Fornecedor</td>
                <td>@item.Nome_Fornecedor</td>
                <td>@String.Format("{0:C}", item.Vlr_Atingido)</td>
                <td>@String.Format("{0:C}", item.Vlr_Minimo)</td>
                <td>@item.Usr</td>
                <td>
                    @if (item.Id_Status == 44)
                    {
                        <span data-toggle="tooltip" title="" data-original-title="@item.Status" class="badge bg-red">@item.Status</span>
                    }
                    else if (item.Id_Status == 45)
                    {
                        <span data-toggle="tooltip" title="" data-original-title="@item.Status" class="badge bg-green">@item.Status</span>
                    }
                    else if (string.IsNullOrEmpty(item.Usr))
                    {
                        @Html.CheckBox("Status", (item.Id_Status == 42), new { @class = "chkStatus iCheck", @data_toggle = "toggle", @data_id = item.Id, @data_on = "Sim", @data_off = "Não" })
                    }
                    else
                    {
                        <span data-toggle="tooltip" title="" data-original-title="@item.Status" class="badge bg-blue">Em Conferência</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>