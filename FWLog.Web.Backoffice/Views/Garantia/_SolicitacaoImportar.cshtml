@model FWLog.Web.Backoffice.Models.GarantiaCtx.GarantiaSolicitacao
@{
    Layout = null;
    @BundleHelper.RenderViewScriptModal()
}
<div class="modal-dialog modal-lg" style="width:95% !important;">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title">Importar Solicitação</h4>
        </div>
        <div class="modal-body" style="overflow: auto; max-height: calc(100vh - 150px);">
            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <form id="formImportarSolicitacao">
                                <div class="row">

                                    <div class="col-xs-12 col-md-2 col-lg-3 form-group">
                                        <label for="Filter_Cli_Cnpj">Tipo de Documento</label>
                                        <select class="form-control" id="Id_Tipo" name="Id_Tipo">
                                            <option></option>
                                            <option value="21">Pedido</option>
                                            <option value="30">Nota Fiscal Eletrônica</option>
                                            <option value="31">Nota Mod. 1 (Manual)</option>
                                            <option value="32">Processo Carta</option>
                                            <option value="20">Quebra</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row divTipo" id="div1">
                                    <div class="col-xs-12 col-md-2 col-lg-3 form-group">
                                        @Html.LabelFor(m => m.Chave_Acesso)
                                        @Html.TextBoxFor(m => m.Chave_Acesso, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="row divTipo" id="div2">
                                    <div class="col-xs-12 col-md-2 col-lg-3 form-group">
                                        @Html.LabelFor(m => m.Cnpj)
                                        @Html.TextBoxFor(m => m.Cnpj, new { @class = "form-control onlyNumber" })
                                    </div>
                                    <div class="col-xs-12 col-md-2 col-lg-3 form-group">
                                        @Html.LabelFor(m => m.Numero)
                                        @Html.TextBoxFor(m => m.Numero, new { @class = "form-control onlyNumber" })
                                    </div>
                                    <div class="col-xs-12 col-md-2 col-lg-3 form-group">
                                        @Html.LabelFor(m => m.Serie)
                                        @Html.TextBoxFor(m => m.Serie, new { @class = "form-control onlyNumber" })
                                    </div>
                                </div>

                                <div class="row divTipo" id="div3">
                                    <div class="col-xs-12 col-md-2 col-lg-3 form-group">
                                        @Html.LabelFor(m => m.Numero_Interno)
                                        @Html.TextBoxFor(m => m.Numero_Interno, new { @class = "form-control onlyNumber" })
                                    </div>
                                </div>

                                <div class="row" >
                                    <div id="divPostagem" class="col-xs-12 col-md-2 col-lg-3 form-group">
                                        @Html.LabelFor(m => m.Codigo_Postagem)
                                        @Html.TextBoxFor(m => m.Codigo_Postagem, new { @class = "form-control" })
                                    </div>
                                    <div class="col-xs-12 col-md-2 col-lg-3 form-buttons">
                                        <button style="margin-top: 20px;" type="submit" class="btn btn-primary">Importar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>