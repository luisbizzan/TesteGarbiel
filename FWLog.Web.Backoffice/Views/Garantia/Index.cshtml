@model FWLog.Web.Backoffice.Models.GarantiaCtx.GarantiaListViewModel
@using FWLog.AspNet.Identity

@{
    ViewBag.Title = "Lista de Garantia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript(
        new
        {
            detailsUrl = Url.Action("Details"),
            detailsVisible = User.HasPermission(Permissions.Garantia.Listar),
            pageDataUrl = Url.Action("PageData")
        }
    )
}

<form data-filter="form" data-filter-for="dataTable" class="form-filter">
    <div class="x_panel">
        <div class="x_title">
            <h2 class="collapse-link">
                <i class="fa fa-chevron-down fa-fw"></i> @Resources.CommonStrings.FilterHeader
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <div class="row">
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.IdCliente)
                    @Html.TextBoxFor(m => m.Filter.IdCliente, new { @class = "form-control onlyNumber", data_field = "IdCliente" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.IdGarantia)
                    @Html.TextBoxFor(m => m.Filter.IdGarantia, new { @class = "form-control onlyNumber", data_field = "IdGarantia" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.IdTransportadora)
                    @Html.TextBoxFor(m => m.Filter.IdTransportadora, new { @class = "form-control onlyNumber", data_field = "IdTransportadora" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 form-buttons">
                    <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                    <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- /filter -->
<!-- table -->
<div class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <!-- panel-title -->
            <div class="x_title">
                <h2>Lista</h2>               
                <div class="clearfix"></div>
            </div>
            <!-- /panel-title -->
            <!-- panel-content -->
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.IdGarantia)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.IdCliente)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.IdTransportadora)</th>
                            @* TODO: Todas as propriedades da classe GarantiaListItemViewModel devem estar aqui *@
                            <th>@Resources.CommonStrings.ActionsLabel</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- /panel-content -->
        </div>
    </div>
</div>
<!-- /table -->

