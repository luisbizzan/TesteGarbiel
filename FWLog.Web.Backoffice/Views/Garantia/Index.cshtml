@model FWLog.Web.Backoffice.Models.GarantiaCtx.GarantiaSolicitacaoVM
@using FWLog.AspNet.Identity

@{
    ViewBag.Title = "Lista de Garantia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript(
        new
        {
            detailsUrl = Url.Action("DetalhesEntradaConferencia"),
            detailsVisible = User.HasPermission(Permissions.Garantia.Listar),
            estornarSolicitacao = User.HasPermission(Permissions.Garantia.EstornarSolicitacao),
            conferirSolicitacao = User.HasPermission(Permissions.Garantia.ConferirSolicitacao),
            pageDataUrl = Url.Action("PageData")
        }
    )
}

<form data-filter="form" data-filter-for="dataTable" class="form-filter">
    <div class="x_panel">
        <div class="x_title">
            <h2 class="collapse-link">
                <i class="fa fa-chevron-down fa-fw"></i> @Resources.CommonStrings.FilterHeader
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <div class="row">
                <div class="col-xs-12 col-md-2 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Cli_Cnpj)
                    @Html.TextBoxFor(m => m.Filter.Cli_Cnpj, new { @class = "form-control onlyNumber", data_field = "Cli_Cnpj" })
                </div>
                <div class="col-xs-12 col-md-2 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Nota_Fiscal)
                    @Html.TextBoxFor(m => m.Filter.Nota_Fiscal, new { @class = "form-control", data_field = "Nota_Fiscal" })
                </div>
                <div class="col-xs-12 col-md-5 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Serie)
                    @Html.TextBoxFor(m => m.Filter.Serie, new { @class = "form-control onlyNumber", data_field = "Serie" })
                </div>
                <div class="col-xs-12 col-md-3 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Id_Status)
                    @Html.DropDownListFor(m => m.Filter.Id_Status, Model.Filter.Lista_Status, "Todos", new { @class = "form-control", data_field = "Id_Status" })
                </div>
                <div class="col-xs-12 col-md-3 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Data_Inicial)
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Filter.Data_Inicial, new { @class = "form-control dateFormat validateDateOrPrazoInicial", data_field = "Data_Inicial" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Filter.Data_Inicial)
                </div>
                <div class="col-xs-12 col-md-3 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Data_Final)
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Filter.Data_Final, new { @class = "form-control dateFormat validateDateOrPrazoInicial", data_field = "Data_Final" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Filter.Data_Final)
                </div>

                <div class="col-xs-12 col-md-3 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Id_Tipo)
                    @Html.DropDownListFor(m => m.Filter.Id_Tipo, Model.Filter.Lista_Tipos, "Todos", new { @class = "form-control", data_field = "Id_Tipo" })
                </div>
                <div class="col-xs-12 col-md-5 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Id)
                    @Html.TextBoxFor(m => m.Filter.Id, new { @class = "form-control onlyNumber", data_field = "Id" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 form-buttons">
                <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
            </div>
        </div>
    </div>
</form>
<div class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Solicitações de Garantia</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Cli_Cnpj)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Id)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Dt_Criacao)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Id_Tipo)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Valor)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Id_Status)</th>
                            <th>@Resources.CommonStrings.ActionsLabel</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalVisualizar"></div>

<!-- /table -->