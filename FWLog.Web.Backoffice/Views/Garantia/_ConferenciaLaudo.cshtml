@model FWLog.Web.Backoffice.Models.GarantiaCtx.GarantiaLaudoVM

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_content">
                <table id="tbLaudoItens" class="table table-striped table-bordered dt-responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@Html.DisplayNameFor(m => m.Form.Refx)</th>
                            <th>@Html.DisplayNameFor(m => m.Form.Descricao)</th>
                            @if (Model.Conferencia.Id_Tipo_Conf == 26 || Model.Conferencia.Id_Tipo_Conf == 6)
                            {
                                <th>@Html.DisplayNameFor(m => m.Form.Id_Solicitacao)</th>
                            }
                            <th>@Html.DisplayNameFor(m => m.Form.Quant)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Lista)
                        {

                            <tr style="@(item.Tem_No_Excesso == 1 ? "background-color:#bb110021" : "")">
                                <td></td>
                                <td>@item.Refx</td>
                                <td>@item.Descricao</td>
                                @if (Model.Conferencia.Id_Tipo_Conf == 26 || Model.Conferencia.Id_Tipo_Conf == 6)
                                {
                                    <td>@item.Id_Solicitacao</td>
                                }
                                <td>
                                    @item.Quant
                                </td>
                                <td>
                                    @if (item.Tem_No_Excesso == 1)
                                    {
                                        <span class="label label-danger"> EXCESSO</span>
                                    }
                                    else
                                    {
                                        <a data-toggle="tooltip" title="" data-original-title="Laudos" href="javascript:void(0)" onclick="itensLaudoDetalhe('@item.Refx')" class="btn btn-row-actions btn-sm @(item.Quant_Laudo > 0 ? "btn-danger" : "btn-default")"><i class="fa fa-sticky-note"></i> @item.Quant_Laudo</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>