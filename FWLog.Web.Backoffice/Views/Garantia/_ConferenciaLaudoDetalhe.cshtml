@model FWLog.Web.Backoffice.Models.GarantiaCtx.GarantiaLaudoVM

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_content">
                <form>
                    <div class="col-xs-12 col-md-2 col-lg-3 form-group">
                        @Html.LabelFor(m => m.Form.Quant)
                        @Html.TextBoxFor(m => m.Form.Quant, new { @class = "form-control onlyNumber" })
                    </div>
                    <div class="col-xs-12 col-md-3 col-lg-3 form-group">
                        @Html.LabelFor(m => m.Form.Id_Motivo)
                        @Html.DropDownListFor(m => m.Form.Id_Motivo, Model.Form.Lista_Motivos, new { @class = "form-control" })
                    </div>
                    <button style="margin-top: 20px;" type="button" class="btn btn-primary">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_content">
                <table id="tbDivergenciaItens" class="table table-striped table-bordered dt-responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th>Quant.</th>
                            <th>Motivo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Lista)
                        {

                            <tr>
                                <td>@item.Quant</td>
                                <td>@item.Motivo</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>