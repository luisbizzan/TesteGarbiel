@model FWLog.Web.Backoffice.Models.NivelArmazenagemCtx.NivelArmazenagemCreateViewModel

@{
    ViewBag.Title = "Cadastrar Nível de Armazenagem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript()
}

@using (Html.BeginForm())
{
    <div class="x_panel">
        <div class="x_title">
            <h2>Cadastrar Nível de Armazenagem</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="form-group col-sm-6 col-xs-12">
                    @Html.LabelFor(m => m.Descricao, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Descricao)
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-12 col-md-6 col-lg-3">
                    @Html.LabelFor(m => m.Ativo)
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.Ativo, new { @class = "flat" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Ativo)
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="row col-xs-12 form-buttons">
                <a href="@Url.Action("Index")" class="btn btn-default">Voltar</a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
}


