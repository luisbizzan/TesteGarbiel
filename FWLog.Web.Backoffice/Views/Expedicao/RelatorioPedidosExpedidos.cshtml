@model FWLog.Web.Backoffice.Models.ExpedicaoCtx.RelatorioPedidodsExpedidosViewModel

@{
    ViewBag.Title = "Relatório - Pedidos Expedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript(
        new
        {
            pageDataUrl = Url.Action("RelatorioPedidosExpedidosPageData"),
        })
}


<form id="relatorioVolumesInstaladosTransportadoraForm" data-filter="form" data-filter-for="dataTable" class="form-filter">
    <div class="x_panel">
        <div class="x_title">
            <h2 class="collapse-link">
                <i class="fa fa-chevron-down fa-fw"></i> @Resources.CommonStrings.FilterHeader
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <div class="row" style="margin-bottom: 20px;">
                <div class="col-xs-12 col-sm-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.DataInicial)
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Filter.DataInicial, new { @class = "form-control dateFormat", data_field = "DataInicial" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Filter.DataInicial)
                </div>
                <div class="col-xs-12 col-sm-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.DataFinal)
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Filter.DataFinal, new { @class = "form-control dateFormat", data_field = "DataFinal" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Filter.DataFinal)
                </div>
                <div class="col-xs-12 col-sm-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.IdTransportadora, new { @class = "control-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Filter.NomeTransportadora, null, new { @class = "form-control", @readonly = "true" })
                        <span class="input-group-btn">
                            <a id="pesquisarTransportadora" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparTransportadora" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 form-buttons">
                <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
            </div>
        </div>
    </div>
</form>
<div class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Relatório Pedidos Expedidos</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.NroPedido)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.DataDoPedido)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.NomeTransportadora)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.IdPedidoVendaVolume)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.NotaFiscalESerie)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.DataSaidaDoPedido)</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalTransportadora"></div>














