@model FWLog.Web.Backoffice.Models.ExpedicaoCtx.RelatorioVolumesInstaladosTransportadoraViewModel

@{
    ViewBag.Title = "Relatório Volumes Instalados x Transportadora";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @FWLog.Web.Backoffice.Helpers.Bundling.BundleHelper.RenderViewScript(
            new
            {
                pageDataUrl = Url.Action("RelatorioVolumesInstaladosTransportadoraPageData"),
            }
        )
}

<form id="relatorioVolumesInstaladosTransportadoraForm" data-filter="form" data-filter-for="dataTable" class="form-filter">
    <div class="x_panel">
        <div class="x_title">
            <h2 class="collapse-link">
                <i class="fa fa-chevron-down fa-fw"></i> @Resources.CommonStrings.FilterHeader
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <div class="row">
                <div class="form-group col-sm-3 col-xs-12 col-lg-3 col-md-3">
                    @Html.LabelFor(m => m.Filter.IdTransportadora, new { @class = "control-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Filter.NomeTransportadora, null, new { @class = "form-control", @readonly = "true" })
                        <span class="input-group-btn">
                            <a id="pesquisarTransportadora" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparTransportadora" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                    @Html.HiddenFor(m => m.Filter.IdTransportadora, new { data_field = "IdTransportadora" })
                    @Html.ValidationMessageFor(m => m.Filter.IdTransportadora)
                </div>
                <div class="form-group col-sm-3 col-xs-12 col-lg-3 col-md-3">
                    @Html.LabelFor(m => m.Filter.EnderecoCodigo, new { @class = "control-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Filter.TransportadoraEndereco, null, new { @class = "form-control", @readonly = "true" })
                        <span class="input-group-btn">
                            <a id="pesquisarTransportadoraEndereco" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparTransportadoraEndereco" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                    @Html.HiddenFor(m => m.Filter.EnderecoCodigo, new { data_field = "EnderecoCodigo" })
                    @Html.ValidationMessageFor(m => m.Filter.EnderecoCodigo)
                </div>
                <div class="form-group col-sm-3 col-xs-12 col-lg-3 col-md-3">
                    @Html.LabelFor(m => m.Filter.IdPedidoVenda, new { @class = "control-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Filter.NumeroPedidoVenda, null, new { @class = "form-control", @readonly = "true" })
                        <span class="input-group-btn">
                            <a id="pesquisarPedidoVenda" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparPedidoVenda" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                    @Html.HiddenFor(m => m.Filter.IdPedidoVenda, new { data_field = "IdPedidoVenda" })
                    @Html.ValidationMessageFor(m => m.Filter.IdPedidoVenda)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 form-buttons">
                    <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                    <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                </div>
            </div>
        </div>
    </div>
</form>
<div id="tabelaResultado" class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Relatório Volumes Instalados x Transportadora</h2>
                <div class="nav navbar-right">
                    <div class="col-xs-12">
                        <a id="downloadRelatorioVolumesInstaladosTransportadora" data-toggle="tooltip" title="Download Relatório" class="btn btn-default"><i class="fa fa-fw fa-download"></i></a>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Transportadora)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.CodigoEndereco)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.NumeroPedido)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.NumeroVolume)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.StatusVolume)</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalPesquisaTransportadora"></div>
<div class="modal" id="modalPesquisaTransportadoraEndereco"></div>
<div class="modal" id="modalPesquisaPedidoVenda"></div>
<div class="modal fade" id="modalImpressoras" data-backdrop="static"></div>