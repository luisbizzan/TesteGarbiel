@model FWLog.Web.Backoffice.Models.ExpedicaoCtx.GerenciarVolumeViewModel

@{
    ViewBag.Title = "Gerenciar Volumes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript()
}

<div class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Cadastrar Caixa</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="form-group col-sm-2">
                        @Html.LabelFor(m => m.NroPedido, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.NroPedido, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NroPedido)
                        @Html.HiddenFor(m => m.IdPedido)
                        @Html.HiddenFor(m => m.IdGrupoCorredorArmazenagem)
                        @Html.HiddenFor(m => m.CorredorInicio)
                        @Html.HiddenFor(m => m.CorredorFim)
                        @Html.HiddenFor(m => m.IdPedidoVendaVolume, new { data_field = "IdPedidoVendaVolume" })
                    </div>
                    <div class="form-group col-sm-2">
                        @Html.LabelFor(m => m.NroVolume)
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.NroVolume, null, new { @class = "form-control", @readonly = "true" })
                            <span class="input-group-btn">
                                <a id="pesquisarVolume" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                                <a id="limparVolume" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                            </span>
                        </div>
                        @Html.HiddenFor(m => m.IdPedidoVendaVolumeOrigem, new { data_field = "IdPedidoVendaVolumeOrigem" })
                    </div>
                    <div class="form-group col-sm-3">
                        @Html.LabelFor(m => m.DescricaoProduto)
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.DescricaoProduto, null, new { @class = "form-control", @readonly = "true" })
                            <span class="input-group-btn">
                                <a id="pesquisarProduto" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                                <a id="limparProduto" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                            </span>
                        </div>
                        @Html.HiddenFor(m => m.IdProduto, new { data_field = "IdProduto" })
                    </div>
                    <div class="form-group col-sm-2">
                        @Html.LabelFor(m => m.QuantidadeOriginal, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.QuantidadeOriginal, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.QuantidadeOriginal)
                    </div>
                    <div class="form-group col-sm-2">
                        @Html.LabelFor(m => m.Quantidade, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Quantidade, new { @class = "form-control onlynumber" })
                        @Html.ValidationMessageFor(m => m.Quantidade)
                    </div>
                    <div class="form-group col-sm-1">
                        <button type="button" id="adicionarLinhaTabela" class="btn btn-primary" style="margin-top: 13px;background-color: #337ab7 !important;border-color: #2e6da4 !important;">Adicionar</button>
                    </div>
                </div>
                @Html.HiddenFor(m => m.IdEmpresa)
                <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <table class="table table-striped table-bordered dt-responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nro. Volume</th>
                                <th>Produto</th>
                                <th>Quantidade Original</th>
                                <th>Quantidade</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    <button type="button" class="btn btn-danger" id="removerLinhaTabela">Deletar</button>
                </div>
                <div class="ln_solid"></div>
                <div class="row col-xs-12 form-buttons">
                    <a href="@Url.Action("Index")" class="btn btn-default">Voltar</a>
                    <button id="salvarVolumes" type="button" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalProduto"></div>
<div class="modal" id="modalCaixa"></div>
<div class="modal" id="modalVolume"></div>