@model FWLog.Web.Backoffice.Models.ExpedicaoCtx.PedidoVendaModalViewModelViewModel
@{
    Layout = null;

    @BundleHelper.RenderViewScriptModal(
        new
        {
            detailsVisible = false,
            editVisible = false,
            deleteVisible = false,
            pageDataUrl = Url.Action("PedidoVendaPesquisaModalDadosLista"),
        }
    )
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Selecione o Pedido Venda</h4>
        </div>
        <div class="modal-body">
            <form data-filter="form" data-filter-for="dataTablePedidoVendaModal" class="form-filter" id="form-datatable-modal">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-lg-4 form-group">
                        @Html.LabelFor(m => m.Filter.NumeroPedido)
                        @Html.TextBoxFor(m => m.Filter.NumeroPedido, new { @class = "form-control onlyNumber", data_field = "NumeroPedido" })
                    </div>
                    <div class="col-xs-12 col-sm-6 col-lg-4 form-group">
                        @Html.LabelFor(m => m.Filter.NumeroPedidoVenda)
                        @Html.TextBoxFor(m => m.Filter.NumeroPedidoVenda, new { @class = "form-control onlyNumber", data_field = "NumeroPedidoVenda" })
                    </div>
                    <div class="col-xs-12 col-sm-6 col-lg-4 form-group">
                        @Html.LabelFor(m => m.Filter.NomeTransportadora)
                        @Html.TextBoxFor(m => m.Filter.NomeTransportadora, new { @class = "form-control", data_field = "NomeTransportadora" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 form-buttons">
                        <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                        <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-xs-12">
                    <table id="dataTablePedidoVendaModal" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.NumeroPedido)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.NumeroPedidoVenda)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.ClienteNome)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.TransportadoraNome)</th>
                                <th>@Resources.CommonStrings.ActionsLabel</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>