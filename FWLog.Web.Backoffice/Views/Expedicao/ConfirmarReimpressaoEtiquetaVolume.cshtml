@model FWLog.Web.Backoffice.Models.ExpedicaoCtx.ConfirmaReimpressaoVolumeViewModel

@{
    Layout = null;

    @BundleHelper.RenderViewScriptModal()
}

<div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmar Reimpressão da Etiqueta</h4>
            </div><div class="container"></div>
            <div class="modal-body" style="overflow: auto; max-height: calc(90vh - 40px);">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <span>Deseja reimprimir a etiqueta do Volume <b>@Model.Volume.ToString().PadLeft(3, '0') </b> - Pedido <b>@Model.NroPedido</b>?</span>
                    </div>
                    @Html.Hidden("IdPedidoVendaVolume", Model.IdPedidoVendaVolume)
                </div>
            </div>
            <div class="modal-footer">
                <a id="btnConfirmar" class="btn btn-primary">Confirmar</a>
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancelar</a>
            </div>
        </div>
    </div>
</div>