@model FWLog.Web.Backoffice.Models.EmpresaCtx.EmpresaSearchModalViewModel
@{
    Layout = null;
    @BundleHelper.RenderViewScriptModal(
            new
            {
                detailsVisible = false,
                editVisible = false,
                deleteVisible = false,
                pageDataUrl = Url.Action("SearchModalPageData")
            })
}

<div class="modal-dialog modal-lg">
    @Html.HiddenFor(m => m.CampoSelecionado)
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Selecione a Empresa</h4>
        </div>
        <div class="modal-body">
            <form data-filter="form" data-filter-for="dataTableModal" class="form-filter" id="form-datatable-modal">
                <div class="x_panel">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-lg-7 form-group">
                            @Html.LabelFor(m => m.Filter.NomeFantasia)
                            @Html.TextBoxFor(m => m.Filter.NomeFantasia, new { @class = "form-control", data_field = "NomeFantasia" })
                        </div>
                        <div class="col-xs-12 col-sm-6 col-lg-3 form-group">
                            @Html.LabelFor(m => m.Filter.CNPJ)
                            @Html.TextBoxFor(m => m.Filter.CNPJ, new { @class = "form-control", data_field = "CNPJ" })
                        </div>
                        <div class="col-xs-12 col-sm-6 col-lg-2 form-group">
                            @Html.LabelFor(m => m.Filter.Sigla)
                            @Html.TextBoxFor(m => m.Filter.Sigla, new { @class = "form-control", data_field = "Sigla" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 form-buttons">
                            <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                            <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <table id="dataTableModal" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => m.EmptyItem.Sigla)</th>
                                        <th>@Html.DisplayNameFor(m => m.EmptyItem.NomeFantasia)</th>
                                        <th>@Html.DisplayNameFor(m => m.EmptyItem.CNPJ)</th>
                                        <th>@Resources.CommonStrings.ActionsLabel</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
