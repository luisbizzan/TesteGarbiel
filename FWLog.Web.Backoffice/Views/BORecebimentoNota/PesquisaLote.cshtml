@model FWLog.Web.Backoffice.Models.BORecebimentoNotaCtx.PesquisaLoteModalViewModel
@{
    Layout = null;
    @BundleHelper.RenderViewScriptModal(
    new
    {
        detailsVisible = false,
        editVisible = false,
        deleteVisible = false,
        pageDataUrl = Url.Action("PesquisaLoteModalPageData")
    })
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Selecione o Lote</h4>
        </div>
        <div class="modal-body">
            <form data-filter="form" data-filter-for="dataTableModal" class="form-filter" id="form-datatable-modal">
                <div class="x_panel">
                    <div class="row">
                        <div class="col-xs-12 col-md-3 form-group">
                            @Html.LabelFor(m => m.Filter.NroLote)
                            @Html.TextBoxFor(m => m.Filter.NroLote, new { @class = "form-control", data_field = "NroLote" })
                        </div>
                        <div class="col-xs-12 col-md-3 form-group">
                            @Html.LabelFor(m => m.Filter.NroNota)
                            @Html.TextBoxFor(m => m.Filter.NroNota, new { @class = "form-control", data_field = "NroNota" })
                        </div>
                        <div class="col-xs-12 col-md-3 form-group">
                            @Html.LabelFor(m => m.Filter.CodFornecesor)
                            @Html.TextBoxFor(m => m.Filter.CodFornecesor, new { @class = "form-control", data_field = "CodFornecesor" })
                        </div>
                        <div class="col-xs-12 col-md-3 form-group">
                            @Html.LabelFor(m => m.Filter.Recebimento)
                            <div class='input-group date'>
                                @Html.TextBoxFor(m => m.Filter.Recebimento, new { @class = "form-control dateFormat", data_field = "Recebimento" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 form-buttons">
                            <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                            <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <table id="dataTableModal" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => m.EmptyItem.NroLote)</th>
                                        <th>@Html.DisplayNameFor(m => m.EmptyItem.NroNota)</th>
                                        <th>@Html.DisplayNameFor(m => m.EmptyItem.Recebimento)</th>
                                        <th>@Html.DisplayNameFor(m => m.EmptyItem.NomeFantasiaFormecedor)</th>
                                        <th>@Resources.CommonStrings.ActionsLabel</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
