@model FWLog.Web.Backoffice.Models.BORecebimentoNotaCtx.BOEntradaConferenciaViewModel
@{
    Layout = null;

    @BundleHelper.RenderViewScriptModal()
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Conferência de Nota</h4>
        </div>
        <div class="modal-body" style="overflow: auto; max-height: calc(90vh - 40px);">
            <div class="x_panel">
                <div class="x_content">

                    <div class="x_panel">
                        <div class="x_content">
                            <div class="row">
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.NumeroNotaFiscal)
                                        @Html.TextBoxFor(m => m.NumeroNotaFiscal, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6" style="margin-bottom:10px;">
                                    @Html.LabelFor(model => model.IdConferente, htmlAttributes: new { @class = "control-label" })
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.NomeConferente, null, new { @class = "form-control", @readonly = "true" })
                                        <span class="input-group-btn">
                                            <a id="pesquisarConferente" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                                            <a id="limparConferente" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.DataHoraRecebimento)
                                        @Html.TextBoxFor(m => m.DataHoraRecebimento, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.QuantidadeVolumes)
                                        @Html.TextBoxFor(m => m.QuantidadeVolumes, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-12">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.NomeFornecedor)
                                        @Html.TextBoxFor(m => m.NomeFornecedor, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="x_panel">
                        <div class="x_title">
                            Itens
                        </div>
                        <div class="x_content">
                            <div class="row">
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.Referencia)
                                        @Html.TextBoxFor(m => m.Referencia, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.Embalagem)
                                        @Html.TextBoxFor(m => m.Embalagem, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.Unidade)
                                        @Html.TextBoxFor(m => m.Unidade, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.Multiplo)
                                        @Html.TextBoxFor(m => m.Multiplo, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.QuantidadePorVolumes)
                                        @Html.TextBoxFor(m => m.QuantidadePorVolumes, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.NumerosDeCaixas)
                                        @Html.TextBoxFor(m => m.NumerosDeCaixas, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.TotalItens)
                                        @Html.TextBoxFor(m => m.TotalItens, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.MediaVendaMes)
                                        @Html.TextBoxFor(m => m.MediaVendaMes, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="x_panel">
                        <div class="x_title">
                            Estoque e Vendas
                        </div>
                        <div class="x_content">
                            <div class="row">
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.Estoque)
                                        @Html.TextBoxFor(m => m.Estoque, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.ReservaVendas)
                                        @Html.TextBoxFor(m => m.ReservaVendas, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.Localizacao)
                                        @Html.TextBoxFor(m => m.Localizacao, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.Apoio)
                                        @Html.TextBoxFor(m => m.Apoio, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-4">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.QuantidadeNaoConferida)
                                        @Html.TextBoxFor(m => m.QuantidadeNaoConferida, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-4">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.QuantidadePortaPalete)
                                        @Html.TextBoxFor(m => m.QuantidadePortaPalete, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-4">
                                    <div class="form-group">
                                        @Html.LabelFor(f => f.QuantidadeConferida)
                                        @Html.TextBoxFor(m => m.QuantidadeConferida, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row navbar-right">
                        <div class="col-sm-12 col-lg-12">
                            <button type="button" class="btn btn-default">Divergência</button>
                            <button type="button" class="btn btn-primary"><i class="fa fa-fw fa-print"></i>Finalizar</button>
                            <button type="button" class="btn btn-primary"><i class="fa fa-fw fa-print"></i>Confirmar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
