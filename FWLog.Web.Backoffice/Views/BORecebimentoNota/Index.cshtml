@model FWLog.Web.Backoffice.Models.BORecebimentoNotaCtx.BORecebimentoNotaListViewModel
@using FWLog.AspNet.Identity

@{
    ViewBag.Title = "Notas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript()
}

<!-- title -->
<div class="page-title">
    <div class="title">
        <h3>@ViewBag.Title</h3>
    </div>
</div>
<!-- /title -->
<!-- filter -->
<form data-filter="form" data-filter-for="dataTable" class="form-filter">
    <div class="x_panel">
        <div class="x_title">
            <h2 class="collapse-link">
                <i class="fa fa-chevron-down fa-fw"></i> @Resources.CommonStrings.FilterHeader
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <div class="row">
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Lote)
                    @Html.TextBoxFor(m => m.Filter.Lote, new { @class = "form-control", data_field = "Lote" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Nota)
                    @Html.TextBoxFor(m => m.Filter.Nota, new { @class = "form-control", data_field = "Nota" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.DANFE)
                    @Html.TextBoxFor(m => m.Filter.DANFE, new { @class = "form-control", data_field = "DANFE" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.IdStatus)
                    @*@Html.DropDownListFor(m => m.Filter.IdStatus, Model.Filter.Status, " ", new { @class = "form-control", multiple = "multiple" })*@
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.DataInicial)
                    @Html.TextBoxFor(m => m.Filter.DataInicial, new { @class = "form-control", data_field = "DataInicial" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.DataFinal)
                    @Html.TextBoxFor(m => m.Filter.DataFinal, new { @class = "form-control", data_field = "DataFinal" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.PrazoInicial)
                    @Html.TextBoxFor(m => m.Filter.PrazoInicial, new { @class = "form-control", data_field = "PrazoInicial" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.PrazoFinal)
                    @Html.TextBoxFor(m => m.Filter.PrazoFinal, new { @class = "form-control", data_field = "PrazoFinal" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Fornecedor)
                    @Html.TextBoxFor(m => m.Filter.Atraso, new { @class = "form-control", data_field = "Fornecedor" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Atraso)
                    @Html.TextBoxFor(m => m.Filter.Atraso, new { @class = "form-control", data_field = "Atraso" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.QuantidadePeca)
                    @Html.TextBoxFor(m => m.Filter.QuantidadePeca, new { @class = "form-control", data_field = "QuantidadePeca" })
                </div>
                <div class="col-xs-12 col-md-6 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.Volume)
                    @Html.TextBoxFor(m => m.Filter.Volume, new { @class = "form-control", data_field = "Volume" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 form-buttons">
                    <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                    <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- /filter -->
<!-- table -->
<div class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <!-- panel-title -->
            <div class="x_title">
                <h2>Notas</h2>
                <div class="nav navbar-right panel_toolbox">
                    <a id="imprimirEtiquetaConferencia" class="btn btn-primary"><i class="fa fa-fw fa-plus"></i>Tela Imprimir Etiqueta Volumes</a>
                    @if (User.HasPermission(Permissions.Role.Create))
                    {
                        <a class="btn btn-primary btn-dt-action" href="@Url.Action("Create")"><i class="fa fa-fw fa-plus"></i> @Resources.CommonStrings.CreateAction</a>
                    }
                </div>
                <div class="clearfix"></div>
            </div>
            <!-- /panel-title -->
            <!-- panel-content -->
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Lote)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Nota)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.QuantidadePeca)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.QuantidadeVolume)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Atraso)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Prazo)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Fornecedor)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Status)</th>
                            <th>@Resources.CommonStrings.ActionsLabel</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- /panel-contet -->
        </div>
    </div>
</div>
<!-- /table -->
<div class="modal" id="modalEtiquetaConferencia"></div>
