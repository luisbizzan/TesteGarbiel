@model FWLog.Web.Backoffice.Models.BORecebimentoNotaCtx.RelatorioValidadePecaViewModel
@{
    ViewBag.Title = "Relatório - Validade de Peça";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript(
        new
        {
            pageDataUrl = Url.Action("RelatorioValidadePecaPageData")
        })
}

<!-- filter -->
<form data-filter="form" data-filter-for="dataTable" class="form-filter">
    <div class="x_panel">
        <div class="x_title">
            <h2 class="collapse-link">
                <i class="fa fa-chevron-down fa-fw"></i> @Resources.CommonStrings.FilterHeader
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <div class="row" style="margin-bottom: 20px;">
                <div class="form-group col-md-3 col-xs-12">
                    @Html.LabelFor(m => m.Filtros.IdLote)
                    <div class="input-group" style="margin-bottom: 3px;">
                        @Html.TextBoxFor(m => m.Filtros.IdLote, null, new { @class = "form-control onlyNumber validateLoteOrProduto", data_field = "IdLote", autocomplete = "off" })
                        <span class="input-group-btn">
                            <a id="pesquisarLote" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparLote" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                    @Html.HiddenFor(m => m.Filtros.IdLote)
                </div>
                <div class="form-group col-md-3 col-xs-12">
                    @Html.LabelFor(m => m.Filtros.IdProduto)
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Filtros.DescricaoProduto, null, new { @class = "form-control", @readonly = "true" })
                        <span class="input-group-btn">
                            <a id="pesquisarProduto" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparProduto" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                    @Html.HiddenFor(m => m.Filtros.IdProduto, new { data_field = "IdProduto" })
                </div>
                <div class="col-xs-12 col-md-3 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filtros.DataInicial)
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Filtros.DataInicial, new { @class = "form-control dateFormat", data_field = "DataInicial" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                <div class="col-xs-12 col-md-3 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filtros.DataFinal)
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Filtros.DataFinal, new { @class = "form-control dateFormat", data_field = "DataFinal" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 form-buttons">
                    <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                    <button type="button" id="pesquisar" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- /filter -->
<!-- table -->
<div id="tabela" class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <!-- panel-title -->
            <div class="x_title">
                <h2>Validade de Peças</h2>
                <div class="nav navbar-right">
                    <div class="col-xs-12">
                        <a id="downloadRelatorio" data-toggle="tooltip" title="Download Relatório" class="btn btn-default"><i class="fa fa-fw fa-download"></i></a>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <!-- /panel-title -->
            <!-- panel-content -->
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.ItemVazio.IdLote)</th>
                            <th>@Html.DisplayNameFor(m => m.ItemVazio.ReferenciaProduto)</th>
                            <th>@Html.DisplayNameFor(m => m.ItemVazio.DescricaoProduto)</th>
                            <th>@Html.DisplayNameFor(m => m.ItemVazio.Saldo)</th>
                            <th>@Html.DisplayNameFor(m => m.ItemVazio.DataValidade)</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- /panel-content -->
        </div>
    </div>
</div>
<div class="modal" id="modalLote"></div>
<div class="modal" id="modalProduto"></div>
<!-- /table -->
