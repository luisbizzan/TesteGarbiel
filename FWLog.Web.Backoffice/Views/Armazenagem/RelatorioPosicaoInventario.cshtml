@model FWLog.Web.Backoffice.Models.ArmazenagemCtx.RelatorioPosicaoInventarioViewModel
@{
    ViewBag.Title = "Relatório - Posição para Inventário";
}
@section Scripts {
    @BundleHelper.RenderViewScript(
        new
        {
            pageDataUrl = Url.Action("RelatorioPosicaoInventarioPageData")
        })
}

<!-- filter -->
<form id="formPesquisa" data-filter="form" data-filter-for="dataTable" class="form-filter">
    <div class="x_panel">
        <div class="x_title">
            <h2 class="collapse-link">
                <i class="fa fa-chevron-down fa-fw"></i> @Resources.CommonStrings.FilterHeader
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <div class="row">
                <div class="form-group col-sm-3 col-xs-12 col-lg-3 col-md-4">
                    @Html.LabelFor(m => m.Filter.IdNivelArmazenagem, new { @class = "control-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Filter.DescricaoNivelArmazenagem, null, new { @class = "form-control", @readonly = "true" })
                        <span class="input-group-btn">
                            <a id="pesquisarNivelArmazenagem" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparNivelArmazenagem" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                    @Html.HiddenFor(m => m.Filter.IdNivelArmazenagem, new { data_field = "IdNivelArmazenagem" })
                    @Html.ValidationMessageFor(m => m.Filter.IdNivelArmazenagem)
                </div>
                <div class="form-group col-sm-3 col-xs-12 col-lg-3 col-md-4">
                    @Html.LabelFor(m => m.Filter.IdPontoArmazenagem, new { @class = "control-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Filter.DescricaoPontoArmazenagem, null, new { @class = "form-control", @readonly = "true" })
                        <span class="input-group-btn">
                            <a id="pesquisarPontoArmazenagem" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparPontoArmazenagem" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                    @Html.HiddenFor(m => m.Filter.IdPontoArmazenagem, new { data_field = "IdPontoArmazenagem" })
                    @Html.ValidationMessageFor(m => m.Filter.IdPontoArmazenagem)
                </div>
                <div class="form-group col-md-4 col-xs-12 col-lg-3">
                    @Html.LabelFor(m => m.Filter.IdProduto)
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Filter.DescricaoProduto, null, new { @class = "form-control", @readonly = "true" })
                        <span class="input-group-btn">
                            <a id="pesquisarProduto" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparProduto" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                    @Html.HiddenFor(m => m.Filter.IdProduto, new { data_field = "IdProduto" })
                </div>
            </div>
            <div class="row" style="margin-bottom: 20px;">
                <div class="form-group col-md-4 col-xs-12 col-lg-3">
                    @Html.LabelFor(m => m.Filter.CorredorInicial)
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Filter.CorredorInicial, new { @class = "form-control onlyNumber validateCorredorInicial", data_field = "CorredorInicial" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Filter.CorredorInicial)
                </div>
                <div class="form-group col-md-4 col-xs-12 col-lg-3">
                    @Html.LabelFor(m => m.Filter.CorredorFinal)
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Filter.CorredorFinal, new { @class = "form-control onlyNumber validateCorredorFinal validateCorredorFinalMaiorQue", data_field = "CorredorFinal" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Filter.CorredorFinal)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 form-buttons">
                    <button type="button" id="limparFiltros" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                    <button type="button" id="pesquisar" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                </div>
            </div>
        </div>
    </div>
</form>
<div id="tabelaPosicaoInventario" class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Posição do Inventário</h2>
                <div class="nav navbar-right">
                    <div class="col-xs-12">
                        <a id="downloadRelatorioPosicaoInventario" data-toggle="tooltip" title="Download Relatório" class="btn btn-default"><i class="fa fa-fw fa-download"></i></a>
                        <a id="imprimirRelatorioPosicaoInventario" data-toggle="tooltip" title="Imprimir Relatório" class="btn btn-default"><i class="fa fa-fw fa-print"></i></a>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Referencia)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Codigo)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.IdLote)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.QuantidadeProdutoPorEndereco)</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalPesquisaNivelArmazenagem"></div>
<div class="modal" id="modalPesquisaPontoArmazenagem"></div>
<div class="modal fade" id="modalImpressoras" data-backdrop="static"></div>
<div class="modal" id="modalProduto"></div>