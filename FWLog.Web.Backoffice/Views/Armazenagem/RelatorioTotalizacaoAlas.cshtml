@model FWLog.Web.Backoffice.Models.ArmazenagemCtx.RelatorioTotalizacaoAlasViewModel
@{
    ViewBag.Title = "Relatório - Totalização por Alas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript(
        new
        {
            //urlLoteProduto = Url.Action("RelatorioRastreabilidadeLoteProduto"),
            //loteProdutoVisivel = User.HasPermission(Permissions.RelatoriosArmazenagem.RelatorioRastreabilidadeLote),
            pageDataUrl = Url.Action("RelatorioTotalizacaoAlasPageData")
        })
}
<!-- filter -->
<form data-filter="form" data-filter-for="dataTable" class="form-filter">
    <div class="x_panel">
        <div class="x_title">
            <h2 class="collapse-link">
                <i class="fa fa-chevron-down fa-fw"></i> @Resources.CommonStrings.FilterHeader
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <div class="row" style="margin-bottom: 20px;">
                <div class="col-xs-12 col-md-4 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.CorredorInicial)
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Filter.CorredorInicial, new { @class = "form-control onlyNumber", data_field = "CorredorInicial" })
                    </div>
                </div>
                <div class="col-xs-12 col-md-4 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.CorredorInicial)
                    <div class='input-group date'>
                        @Html.TextBoxFor(m => m.Filter.CorredorInicial, new { @class = "form-control onlyNumber", data_field = "CorredorInicial" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-lg-3 form-group">
                    @Html.LabelFor(m => m.Filter.ImprimirVazia)
                    <div>
                        @Html.CheckBoxFor(m => m.Filter.ImprimirVazia, new { @class = "flat", data_field = "ImprimirVazia" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 form-buttons">
                    <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                    <button type="button" id="pesquisar" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- /table -->
<div class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Lista de Produtos</h2>
                <div class="nav navbar-right">
                    <div class="col-xs-12">
                        <a id="downloadRelatorioProduto" data-toggle="tooltip" title="Download Relatório" class="btn btn-default"><i class="fa fa-fw fa-download"></i></a>
                        <a id="imprimirRelatorioProduto" data-toggle="tooltip" title="Imprimir Relatório" class="btn btn-default"><i class="fa fa-fw fa-print"></i></a>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.NumeroCorredor)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.CodigoEndereco)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.IdUsuarioInstalacao)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.ReferenciaProduto)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.DataInstalacao)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.PesoProduto)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.QuantidadeProdutoPorEndereco)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.PesoTotalDeProduto)</th>
                            @*<th>@Html.DisplayNameFor(m => m.EmptyItem.IdLote)</th>
        <th>@Html.DisplayNameFor(m => m.Itens.Status)</th>
        <th>@Resources.CommonStrings.ActionsLabel</th>*@
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

