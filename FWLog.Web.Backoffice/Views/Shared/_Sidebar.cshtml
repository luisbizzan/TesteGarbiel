        new MenuGroup(text: Res.UserMenuGroup, icon: "fa fa-user").SetItems(
            new MenuItem { Text = "Usuários", Url = Url.Action("Index", "BOAccount"), RequirePermission = Permissions.BOAccount.List },
            new MenuItem { Text = "Grupos de Usuários", Url = Url.Action("Index", "BOGroup"), RequirePermission = Permissions.Role.List }
        ),
        new MenuGroup(text: Res.ConfigurationMenuGroup, icon: "fa fa-cog").SetItems(
            new MenuItem { Text = "Empresa", Url = Url.Action("Editar", "Empresa"), RequirePermission = Permissions.Empresa.EditarConfiguracao },
            new MenuItem { Text = Res.PrinterMenuItem, Url = Url.Action("Index", "BOPrinter"), RequirePermission = Permissions.Printer.List }
        ),
         new MenuGroup(text: Res.RelatoriosMenuItem, icon: "fa fa-archive").SetItems(
            new MenuItem { Text = Res.BOLogSystemMenuItem, Url = Url.Action("Index", "BOLogSystem"), RequirePermission = Permissions.BOLogSystem.List },
            new MenuItem { Text = Res.ApplicationLogMenuItem, Url = Url.Action("Index", "ApplicationLog"), RequirePermission = Permissions.ApplicationLog.List }
        )
    );
}

