<style>
    .usr {
        display: inline-block;
        max-width: 150px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        vertical-align: middle;
    }

    .combo {
        max-width: 315px;
    }

    .usr-completo p {
        margin: 0 0 3px;
        font-size: 11px;
    }

    .usr-completo {
        text-align: center;
    }
</style>

@{MvcHtmlString labelUsuario = Html.Action("LabelUsuario", "BOAccount");}

<!-- top navigation -->
<div class="top_nav getpoints">
    <div class="nav_menu">
        <nav>
            @if (Request.IsAuthenticated)
            {
                <ul class="nav navbar-nav navbar-right">
                    <!-- usuario -->
                    <li class="">
                        <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <span class="usr">
                                @labelUsuario
                            </span>
                            <span class="fa fa-angle-down" style="display: inline-block;"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-usermenu pull-right">
                            <li>
                                <div class="usr-completo">
                                    <p>
                                        @labelUsuario
                                    </p>
                                </div>
                                <hr style="margin: 0px;" />
                                <a href="@Url.Action("ChangePassword", "BOAccount")"><i class="fa fa-key pull-right"></i>@Resources.CommonStrings.ChangePasswordAction</a>
                                <a href="@Url.Action("LogOff", "BOAccount")"><i class="fa fa-sign-out pull-right"></i> @Resources.CommonStrings.LogOffAction</a>
                            </li>
                        </ul>
                    </li>
                    <!-- empresa -->
                    <li class="dropdown" role="presentation">
                        <a class="dropdown-toggle combo" data-toggle="dropdown" aria-expanded="false">
                            @Html.Action("BuscarEmpresas", "Empresa")
                        </a>
                    </li>
                    <!-- perfil Impressora -->
                    <li class="dropdown" role="presentation" >
                        <a class="dropdown-toggle combo" data-toggle="dropdown" aria-expanded="false">
                            @Html.Action("BuscarPerfilImpressora", "PerfilImpressora")
                        </a>
                    </li>
                </ul>
            }
        </nav>
    </div>
</div>
<!-- /top navigation -->
