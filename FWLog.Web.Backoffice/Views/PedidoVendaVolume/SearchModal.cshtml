@model FWLog.Web.Backoffice.Models.PedidoVendaVolumeCtx.PedidoVendaVolumeSearchModalViewModel
@{
    Layout = null;
    @BundleHelper.RenderViewScriptModal(
                                new
                                {
                                    detailsVisible = false,
                                    editVisible = false,
                                    deleteVisible = false,
                                    pageDataUrl = Url.Action("SearchModalPageData"),
                                }

                            )
}


<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Selecione o Volume</h4>
        </div>
        <div class="modal-body">
            <form data-filter="form" data-filter-for="dataTableVolumeModal" class="form-filter" id="form-datatable-modal">
                @Html.HiddenFor(m => m.Filter.IdPedidoVendaVolume, new { data_field = "IdPedidoVendaVolume" })
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-lg-4 form-group">
                        @Html.LabelFor(m => m.Filter.NroPedido)
                        @Html.TextBoxFor(m => m.Filter.NroPedido, new { @class = "form-control", data_field = "NroPedido", @readonly = "readonly" })
                    </div>
                    <div class="col-xs-12 col-sm-6 col-lg-4 form-group">
                        @Html.LabelFor(m => m.Filter.NroVolume)
                        @Html.TextBoxFor(m => m.Filter.NroVolume, new { @class = "form-control onlyNumber", data_field = "NroVolume" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 form-buttons">
                        <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-xs-12">
                    <table id="dataTableVolumeModal" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.NroVolume)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.NroPedido)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.DescricaoStatus)</th>

                                <th>@Resources.CommonStrings.ActionsLabel</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
