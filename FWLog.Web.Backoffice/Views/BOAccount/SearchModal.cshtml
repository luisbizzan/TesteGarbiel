@model FWLog.Web.Backoffice.Models.BOAccountCtx.BOPerfilUsuarioSearchModalViewModel
@{
    Layout = null;
    @BundleHelper.RenderViewScriptModal(
                        new
                        {
                            detailsVisible = false,
                            editVisible = false,
                            deleteVisible = false,
                            pageDataUrl = Url.Action("SearchModalPageData"),
                            origem = Model.Origem
                        }

                    )
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Selecione o Usuário</h4>
        </div>
        <div class="modal-body">
            <form data-filter="form" data-filter-for="dataTableModalUsu" class="form-filter" id="form-datatable-modal">
                <div class="row">
                    <div class="col-xs-12 col-md-3 form-group">
                        @Html.LabelFor(m => m.Filter.UserName)
                        @Html.TextBoxFor(m => m.Filter.UserName, new { @class = "form-control", data_field = "UserName" })
                    </div>
                    <div class="col-xs-12 col-md-3 form-group">
                        @Html.LabelFor(m => m.Filter.Nome)
                        @Html.TextBoxFor(m => m.Filter.Nome, new { @class = "form-control", data_field = "Nome" })
                    </div>
                    <div class="col-xs-12 col-md-3 form-group">
                        @Html.LabelFor(m => m.Filter.Departamento)
                        @Html.TextBoxFor(m => m.Filter.Departamento, new { @class = "form-control", data_field = "Departamento" })
                    </div>
                    <div class="col-xs-12 col-md-3 form-group">
                        @Html.LabelFor(m => m.Filter.Cargo)
                        @Html.TextBoxFor(m => m.Filter.Cargo, new { @class = "form-control", data_field = "Cargo" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 form-buttons">
                        <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                        <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-xs-12">
                    <table id="dataTableModalUsu" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.UserName)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.Nome)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.Departamento)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.Cargo)</th>
                                <th>@Resources.CommonStrings.ActionsLabel</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
