@model FWLog.Web.Backoffice.Models.PerfilImpressoraCtx.PerfilImpressoraDetailsViewModel

@{
    ViewBag.Title = "Visualização de PerfilImpressora"; // TODO: Traduzir nome da entidade
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript()
}

<!-- title -->
<div class="page-title">
    <div class="title">
        <h3 class="title-sml">@ViewBag.Title</h3>
    </div>    
</div>
<!-- /title -->

<div class="x_panel">
    <div class="x_title">
        <h2>PerfilImpressora</h2> @* TODO: Traduzir nome da entidade *@
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <!-- fields -->
        <div class="row">
            <div class="col-xs-12 col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Nome, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="checkbox disabled">
                    <label>
                        @Html.CheckBoxFor(m => m.Ativo, new { @disabled = "disabled" })
                        @Html.DisplayNameFor(m => m.Ativo)
                    </label>
                </div>
            </div>
        </div>
        <!-- /fields -->
        <!-- footer -->
        <div class="ln_solid"></div>
        <div class="row col-xs-12 form-buttons">
            <a href="@Url.Action("Index")" class="btn btn-default">@Resources.CommonStrings.BackAction</a>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">@Resources.CommonStrings.EditAction</a> 
        </div>
        <!-- /footer -->
    </div>
</div>


