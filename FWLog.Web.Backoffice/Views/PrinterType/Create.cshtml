@model FWLog.Web.Backoffice.Models.PrinterTypeCtx.PrinterTypeCreateViewModel
@using Res = Resources.PrinterTypeStrings

@{
    ViewBag.Title = "Criação de PrinterType"; // TODO: Traduzir nome da entidade
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript()
}

<!-- title -->
<div class="page-title">
    <div class="title">
        <h3 class="title-sml">@ViewBag.Title</h3>
    </div>
</div>
<!-- /title -->

@using (Html.BeginForm())
{
    <div class="x_panel">
        <div class="x_title">
            <h2>@Res.PrinterTypeHeader</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <!-- fields -->
            <div class="row">
                <div class="col-xs-12 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
            </div>
            <!-- /fields -->
            <!-- footer -->
            <div class="ln_solid"></div>
            <div class="row col-xs-12 form-buttons">
                <a href="@Url.Action("Index")" class="btn btn-default">@Resources.CommonStrings.CancelAction</a>
                <button type="submit" class="btn btn-primary">@Resources.CommonStrings.ConfirmAction</button>
            </div>
            <!-- /footer -->
        </div>
    </div>
}


