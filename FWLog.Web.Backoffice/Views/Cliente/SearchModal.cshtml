@model FWLog.Web.Backoffice.Models.ClienteCtx.ClienteSearchModalViewModel
@{
    Layout = null;
    @BundleHelper.RenderViewScriptModal(
                                new
                                {
                                    detailsVisible = false,
                                    editVisible = false,
                                    deleteVisible = false,
                                    pageDataUrl = Url.Action("SearchModalPageData"),
                                }

                            )
}


<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Selecione o Cliente</h4>
        </div>
        <div class="modal-body">
            <form data-filter="form" data-filter-for="dataTableClienteModal" class="form-filter" id="form-datatable-modal">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-lg-4 form-group">
                        @Html.LabelFor(m => m.Filter.IdCliente)
                        @Html.TextBoxFor(m => m.Filter.IdCliente, new { @class = "form-control onlyNumber", data_field = "IdFornecedor" })
                    </div>
                    <div class="col-xs-12 col-sm-6 col-lg-4 form-group">
                        @Html.LabelFor(m => m.Filter.NomeFantasia)
                        @Html.TextBoxFor(m => m.Filter.NomeFantasia, new { @class = "form-control", data_field = "NomeFantasia" })
                    </div>
                    <div class="col-xs-12 col-sm-6 col-lg-4 form-group">
                        @Html.LabelFor(m => m.Filter.CNPJCPF)
                        @Html.TextBoxFor(m => m.Filter.CNPJCPF, new { @class = "form-control CNPJCPF", data_field = "CNPJCPF" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 form-buttons">
                        <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                        <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-xs-12">
                    <table id="dataTableClienteModal" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.IdCliente)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.RazaoSocial)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.NomeFantasia)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.CNPJCPF)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.Classificacao)</th>
                                <th>@Html.DisplayNameFor(m => m.EmptyItem.Status)</th>
                                <th>@Resources.CommonStrings.ActionsLabel</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
