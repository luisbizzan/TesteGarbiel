@model FWLog.Web.Backoffice.Models.CorredorImpressoraCtx.CorredorImpressoraEdicaoViewModel

@{
    ViewBag.Title = "Edição de Corredor x Caixa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript()
}

@using (Html.BeginForm("Editar"))
{
    @Html.HiddenFor(m => m.IdGrupoCorredorArmazenagem);
    <div class="x_panel">
        <div class="x_title">
            <h2>Editar Corredor x Caixa</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col-sm-2 col-xs-12">
                    @Html.LabelFor(m => m.CorredorInicial, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.CorredorInicial, new { @class = "form-control onlyNumber validateCorredorInicial" })
                    @Html.ValidationMessageFor(m => m.CorredorInicial)
                </div>
                <div class="form-group col-sm-2 col-xs-12">
                    @Html.LabelFor(m => m.CorredorFinal, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.CorredorFinal, new { @class = "form-control onlyNumber" })
                    @Html.ValidationMessageFor(m => m.CorredorFinal)
                </div>
                <div class="form-group col-sm-3 col-xs-12">
                    @Html.LabelFor(m => m.IdPontoArmazenagem, new { @class = "control-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.DescricaoPontoArmazenagem, null, new { @class = "form-control", @readonly = "true", data_field = "DescricaoPontoArmazenagem" })
                        <span class="input-group-btn">
                            <a id="pesquisarPontoArmazenagem" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparPontoArmazenagem" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                    @Html.HiddenFor(m => m.IdPontoArmazenagem, new { data_field = "IdPontoArmazenagem" })
                </div>
                <div class="form-group col-sm-3 col-xs-12">
                    @Html.LabelFor(m => m.IdImpressora, new { @class = "control-label" })
                    @Html.DropDownListFor(m => m.IdImpressora, Model.ListaImpressora, "Todos...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.IdImpressora)
                </div>
                <div class="form-group col-sm-3 col-xs-12">
                    @Html.LabelFor(m => m.IdImpressoraPedidoFilial, new { @class = "control-label" })
                    @Html.DropDownListFor(m => m.IdImpressoraPedidoFilial, Model.ListaImpressora, "Todos...", new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.IdImpressoraPedidoFilial)
                </div>
                <div class="form-group col-sm-2 col-xs-12">
                    @Html.LabelFor(m => m.Ativo, new { @class = "control-label" })
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.Ativo, new { @class = "flat" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Ativo)
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="row col-xs-12 form-buttons">
                <a href="@Url.Action("Index")" class="btn btn-default">Voltar</a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
}
<div class="modal" id="modalPesquisaPontoArmazenagem"></div>