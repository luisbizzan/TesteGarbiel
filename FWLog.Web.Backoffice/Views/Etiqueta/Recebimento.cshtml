@model FWLog.Web.Backoffice.Models.EtiquetaCtx.RecebimentoEtiquetaViewModel

@{
    ViewBag.Title = "Etiqueta - Recebimento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript()
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "recebimentoEtiqueta" }))
{
    <div class="x_panel">
        <div class="x_title">
            <h2>Imprimir Etiqueta de Recebimento</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="form-group col-md-3 col-xs-12">
                    @Html.LabelFor(m => m.NroLote)
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.NroLote, null, new { @class = "form-control", @readonly = "true" })
                        <span class="input-group-btn">
                            <a id="pesquisarLote" class="btn btn-primary"><i class="fa fa-fw fa-search"></i></a>
                            <a id="limparLote" class="btn btn-primary"><i class="fa fa-fw fa-eraser"></i></a>
                        </span>
                    </div>
                    @Html.HiddenFor(m => m.NroLote)
                </div>
                <div class="form-group col-sm-3 col-xs-12">
                    @Html.LabelFor(m => m.NroVolume, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.NroVolume, new { @class = "form-control onlyNumber", type = "number" })
                    @Html.ValidationMessageFor(m => m.NroVolume)
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="row col-xs-12 form-buttons">
                <button id="submit" class="btn btn-primary">Imprimir</button>
            </div>
        </div>
    </div>
}
<div class="modal" id="modalImpressoras"></div>
<div class="modal" id="modalLote"></div>