@model FWLog.Web.Backoffice.Models.EnderecoArmazenagemCtx.EnderecoArmazenagemPesquisaModalViewModel
@{
    Layout = null;

    @BundleHelper.RenderViewScriptModal(
                        new
                        {
                            detailsVisible = false,
                            editVisible = false,
                            deleteVisible = false,
                            pageDataUrl = Url.Action("EnderecoArmazenagemPesquisaModalDadosLista")
                        }
                    )
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Selecione o Endereço de Armazenagem</h4>
        </div>
        <div class="modal-body">
            <form data-filter="form" data-filter-for="dataTableModal" class="form-filter" id="form-datatable-modal">
                <div class="x_panel">
                    <div class="row">
                        <div class="col-xs-12 col-sm-5 form-group">
                            @Html.LabelFor(m => m.Filtros.Codigo)
                            @Html.TextBoxFor(m => m.Filtros.Codigo, new { @class = "form-control text-uppercase", data_field = "Codigo", @placeholder = "00.X.00.00" })
                            @Html.HiddenFor(m => m.Filtros.IdPontoArmazenagem, new { data_field = "IdPontoArmazenagem" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 form-buttons">
                            <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                            <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <table id="dataTableModal" class="table table-striped table-bordered dt-responsive nowrap dataTableModal" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => m.Itens.Codigo)</th>
                                        <th>@Html.DisplayNameFor(m => m.Itens.LimitePeso)</th>
                                        <th>@Html.DisplayNameFor(m => m.Itens.Fifo)</th>
                                        <th>@Html.DisplayNameFor(m => m.Itens.EstoqueMinimo)</th>
                                        <th>@Html.DisplayNameFor(m => m.Itens.EstoqueMaximo)</th>
                                        <th>@Resources.CommonStrings.ActionsLabel</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

