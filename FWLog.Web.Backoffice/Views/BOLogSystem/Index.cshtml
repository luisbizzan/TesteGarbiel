@model FWLog.Web.Backoffice.Models.BOLogSystemCtx.BOLogSystemListViewModel
@using Res = Resources.BOLogSystemStrings
@using FWLog.AspNet.Identity

@{
    ViewBag.Title = Res.IndexPageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript(
        new
        {
            detailsUrl = Url.Action("Details"),
            detailsVisible = User.HasPermission(Permissions.BOLogSystem.List),
            pageDataUrl = Url.Action("PageData")
        }
    )
}

<!-- filter -->
<form data-filter="form" data-filter-for="dataTable" class="form-filter">
    <div class="x_panel">
        <div class="x_title">
            <h2 class="collapse-link">
                <i class="fa fa-chevron-down fa-fw"></i> @Resources.CommonStrings.FilterHeader
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content" style="display: block;">
            <div class="row">
                <div class="col-xs-12 col-sm-3 form-group">
                    @Html.LabelFor(m => m.Filter.UserName)
                    @Html.TextBoxFor(m => m.Filter.UserName, new { @class = "form-control", data_field = "UserName" })
                </div>
                <div class="col-xs-12 col-sm-3 form-group">
                    @Html.LabelFor(m => m.Filter.ActionType)
                    @Html.DropDownListFor(m => m.Filter.ActionType, Model.Filter.ActionTypeOptions, Res.LabelAll, new { @class = "form-control", data_field = "ActionType" })
                </div>
                <div class="col-xs-12 col-sm-3 form-group">
                    @Html.LabelFor(m => m.Filter.IP)
                    @Html.TextBoxFor(m => m.Filter.IP, new { @class = "form-control", data_field = "IP" })
                </div>
                <div class="col-xs-12 col-sm-3 form-group">
                    @Html.LabelFor(m => m.Filter.Entity)
                    @Html.DropDownListFor(m => m.Filter.ActionType, Model.Filter.EntityOptions, Res.LabelAll, new { @class = "form-control", data_field = "Entity" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.ExecutionDateStart)
                        <div class='input-group date'>
                            @Html.TextBoxFor(m => m.Filter.ExecutionDateStart, new { @class = "form-control", data_field = "ExecutionDateStart" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.ExecutionDateEnd)
                        <div class='input-group date'>
                            @Html.TextBoxFor(m => m.Filter.ExecutionDateEnd, new { @class = "form-control", data_field = "ExecutionDateEnd" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 form-buttons">
                    <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                    <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- /filter -->
<div class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <!-- panel-title -->
            <div class="x_title">
                <h2>@ViewBag.Title</h2>
                <div class="clearfix"></div>
            </div>
            <!-- /panel-title -->
            <!-- table -->
            <div class="x_content">
                <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.UserName)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.ActionType)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.Entity)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.IP)</th>
                            <th>@Html.DisplayNameFor(m => m.EmptyItem.ExecutionDate)</th>
                            <th>@Resources.CommonStrings.ActionsLabel</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- /table -->
        </div>
    </div>
</div>



