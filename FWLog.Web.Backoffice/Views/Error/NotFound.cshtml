@using Res = Resources.ErrorStrings


@{
    if (Request.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutExternal.cshtml";
    }

    ViewBag.Title = Res.NotFoundPageTitle;
}

<div class="col-middle">
    <div class="text-center">
        <h1 class="error-number" style="color: #ffffff">404</h1>
        <h2 style="color: #ffffff">@Res.NotFoundPageHeader</h2>
        <p style="color: #ffffff">A página requisitada não foi encontrada no sistema.</p>
        <div class="mid_center">
            <a href="@Url.Action("Index", "BOHome")" class="btn btn-primary">@Res.BackToHomeAction</a>
        </div>
    </div>
</div>
