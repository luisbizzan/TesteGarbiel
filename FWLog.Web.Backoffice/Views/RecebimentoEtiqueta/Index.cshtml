@model FWLog.Web.Backoffice.Models.RecebimentoNotaCtx.RecebimentoEtiquetaViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @BundleHelper.RenderViewScript()
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "recebimentoEtiqueta" }))
{
    <div class="x_panel">
        <div class="x_title">
            <h2>Imprimir Etiqueta de Lote</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="form-group col-sm-2 col-xs-12">
                    @Html.LabelFor(m => m.NroLote, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.NroLote, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NroLote)
                </div>
                <div class="form-group col-sm-2 col-xs-12">
                    @Html.LabelFor(m => m.ReferenciaProduto, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.ReferenciaProduto, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ReferenciaProduto)
                </div>
                <div class="form-group col-sm-2 col-xs-12">
                    @Html.LabelFor(m => m.QtdPorCaixa, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.QtdPorCaixa, new { @class = "form-control onlyNumber", type = "number" })
                    @Html.ValidationMessageFor(m => m.QtdPorCaixa)
                </div>
                <div class="form-group col-sm-2 col-xs-12">
                    @Html.LabelFor(m => m.QtdCaixas, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.QtdCaixas, new { @class = "form-control onlyNumber", type = "number" })
                    @Html.ValidationMessageFor(m => m.QtdCaixas)
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="row col-xs-12 form-buttons">
                <button id="submit" class="btn btn-primary">Imprimir</button>
            </div>
        </div>
    </div>
}
<div class="modal" id="modalImpressoras"></div>