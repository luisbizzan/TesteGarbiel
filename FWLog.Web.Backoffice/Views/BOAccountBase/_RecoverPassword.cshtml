@model FWLog.Web.Backoffice.Models.BOAccountBaseCtx.RecoverPasswordViewModel
@using Res = Resources.BOAccountBaseStrings;

@{
    ViewBag.Title = Res.RecoverPasswordPageTitle;
    Layout = "~/Views/Shared/_LayoutExternal.cshtml";
}

<div class="login_wrapper">
    <div class="form login_form">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color:#fff">
                <img class="center-block" style="max-height:97px" id="img_logo" src="@Url.Content("~/Content/images/logo.png")" />
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("RecoverPassword", "BOAccountBase", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <fieldset>
                        <div class="row">
                            <div class="col-xs-12">
                                <h4>@Res.RecoverPasswordPageTitle</h4>
                                <p>@Res.RecoverPasswordFormDescription</p>
                            </div>
                            <div class="col-xs-12 form-group has-feedback">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control has-feedback-left", @placeholder = Res.EmailLabel })
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <a href="@Url.Action("LogOn")" class="btn btn-default btn-block"> @Resources.CommonStrings.BackAction</a>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <input class="btn btn-primary btn-block" type="submit" value="@Resources.CommonStrings.ConfirmAction" />
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>


