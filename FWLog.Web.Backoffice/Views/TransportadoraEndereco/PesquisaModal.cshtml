@model FWLog.Web.Backoffice.Models.TransporteEnderecoCtx.TransporteEnderecoListaViewModel
@{
    Layout = null;

    @BundleHelper.RenderViewScriptModal(
        new
        {
            detailsVisible = false,
            editVisible = false,
            deleteVisible = false,
            pageDataUrl = Url.Action("PesquisaModalDadosLista"),
        }
    )
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Selecione o Endereço da Transportadora</h4>
        </div>
        <div class="modal-body">
            <form data-filter="form" data-filter-for="dataTableTransportadoraEnderecoModal" class="form-filter" id="form-datatable-modal">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-lg-4 form-group">
                        @Html.LabelFor(m => m.Filtros.IdEnderecoArmazenagem)
                        @Html.TextBoxFor(m => m.Filtros.CodigoEnderecoArmazenagem, new { @class = "form-control text-uppercase", data_field = "CodigoEnderecoArmazenagem", @placeholder = "00.X.00.00" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 form-buttons">
                        <button type="button" class="btn btn-default" data-filter="clear">@Resources.CommonStrings.ClearAction</button>
                        <button type="button" class="btn btn-primary" data-filter="search">@Resources.CommonStrings.SearchAction</button>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-xs-12">
                    <table id="dataTableTransportadoraEnderecoModal" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Itens.DadosTransportadora)</th>
                                <th>@Html.DisplayNameFor(m => m.Itens.Codigo)</th>
                                <th>@Resources.CommonStrings.ActionsLabel</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>